alias ls='ls -G'
alias lsa='ls -a -G'
alias lsl='ls -l -G'
alias lsal='ls -a -l -G'
alias lsla='ls -a -l -G'

# all of our alias files
typeset -U alias_config_files
alias_config_files=($ZSH/**/*.aliases)

# load the alias files
for file in $alias_config_files
do
  source $file
done

unset alias_config_files

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
